<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--对应mapper接口 -->
<mapper namespace="com.webank.webase.node.mgr.governance.ContractStatusMapper">
  <resultMap id="statusMap" type="com.webank.webase.node.mgr.governance.entity.TbContractStatus">
    <id column="id" javaType="java.lang.Integer" jdbcType="INTEGER" property="id"/>
    <result column="group_id" javaType="java.lang.Integer" jdbcType="INTEGER"
      property="groupId"/>
    <result column="contract_address" javaType="java.lang.String" jdbcType="VARCHAR"
      property="contractAddress"/>
    <result column="status" javaType="java.lang.Integer" jdbcType="INTEGER"
      property="status"/>
    <result column="modify_address" javaType="java.lang.String" jdbcType="VARCHAR"
      property="modifyAddress"/>
    <result column="create_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP"
      property="createTime"/>
    <result column="modify_time" javaType="java.time.LocalDateTime" jdbcType="TIMESTAMP"
      property="modifyTime"/>
  </resultMap>

  <insert id="add" parameterType="com.webank.webase.node.mgr.governance.entity.TbContractStatus">
    insert into
    tb_contract_status(group_id,contract_address,status,modify_address,create_time,modify_time)
    values(#{groupId},#{contractAddress},#{status},#{modifyAddress},NOW(),NOW())
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
      SELECT LAST_INSERT_ID()
    </selectKey>
  </insert>


  <select id="getCount" parameterType="com.webank.webase.node.mgr.governance.entity.GovernParam"
    resultType="java.lang.Integer">
    select count(1) from tb_contract_status where 1=1
    <if test="groupId != null and groupId != ''">
      and group_id = #{groupId}
    </if>
  </select>

  <select id="listOfUser" parameterType="com.webank.webase.node.mgr.governance.entity.GovernParam"
    resultMap="statusMap">
    select * from tb_contract_status where 1=1
    <if test="groupId != null and groupId != ''">
      and group_id = #{groupId}
    </if>
    order by id desc
    <if test="start != null and pageSize != null">
      limit #{start},#{pageSize}
    </if>
  </select>

  <select id="getById" parameterType="java.lang.Integer"
    resultMap="statusMap">
    select * from tb_contract_status
    where id = #{id}
  </select>

  <delete id="deleteById" parameterType="java.lang.Integer">
    delete from tb_contract_status where id = #{id}
  </delete>

</mapper>